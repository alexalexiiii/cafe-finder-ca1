<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    android:gravity="center">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        android:contentDescription="App Logo"
        android:scaleType="centerCrop"
        android:background="@drawable/image_border" />

    <!-- App Name -->
    <TextView
        android:id="@+id/splashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cafe Journal"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/coffee_brown"
        android:layout_marginTop="24dp" />

    <!-- Tagline -->
    <TextView
        android:id="@+id/splashSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save your favourite cafÃ©s"
        android:textSize="16sp"
        android:textColor="@color/cardTextSecondary"
        android:layout_marginTop="8dp" />

    <!-- GIF Loading Indicator -->
    <ImageView
        android:id="@+id/splashGif"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:contentDescription="Loading animation" />

</LinearLayout>
