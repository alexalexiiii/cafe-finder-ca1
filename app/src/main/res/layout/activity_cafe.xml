<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAdd"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/coffee_brown"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Add Café" />

    <!-- Scrollable form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Café Name -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Café Name"
                app:boxStrokeColor="@color/coffee_brown"
                app:hintTextColor="@color/cardTextSecondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/cafeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardTextPrimary"
                    android:textColorHint="@color/cardTextSecondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Favourite Menu Item -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Favourite Menu Item"
                app:boxStrokeColor="@color/latte_brown"
                app:hintTextColor="@color/cardTextSecondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/favouriteItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/cardTextPrimary"
                    android:textColorHint="@color/cardTextSecondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--- Set Location Button -->

            <!-- Rating -->

            <Button
                android:id="@+id/placemarkLocation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:background="@color/latte_brown"
                android:padding="8dp"
                android:stateListAnimator="@null"
                android:text="@string/location_hint"
                android:textColor="@color/cardTextPrimary"
                android:textSize="16sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RatingBar
                    android:id="@+id/ratingBar"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="65dp"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    android:progressTint="@color/coffee_brown"
                    android:secondaryProgressTint="@color/latte_brown"
                    android:progressBackgroundTint="@color/gray" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/returningSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Worth returning?"
                android:checked="false"
                android:layout_marginTop="12dp"/>

            <!-- Image Preview -->
            <ImageView
                android:id="@+id/cafeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nycd"
                android:background="@drawable/image_border" />

            <!-- Choose Image Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/chooseImage"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:text="@string/choose_image"
                app:icon="@drawable/ic_photo"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:textColor="@color/coffee_brown"
                app:strokeColor="@color/coffee_brown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <!-- Save Café Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/save_cafe"
                android:textColor="@color/white"
                app:backgroundTint="@color/coffee_brown"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
